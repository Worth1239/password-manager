MASTR = input("Enter your master password: ")

master_list = []


def create_new_pass():
    while True:
        new_pass = {}
        website = input("What website is this password for? ")
        password = input("What is this password? ")
        x = input("Is this correct? " + website + " : " + password + " ")
        if x.lower() == "yes":
            new_pass[website] = password
            print("Your password has been saved")
            master_list.append(new_pass)
            break
        else:
            continue


def main_op():
    while True:
        options = input("What would you like to do? Press E to check all passwords. Press Q to add a new password. Press X to quit. ")
        if options.lower() == "e":
            x = input("Please enter master password. ")
